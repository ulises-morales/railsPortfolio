<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_my_portfolio_path %>

<% @portfolio_items.each do |portfolio_item| %>
  <p><%= link_to portfolio_item.title, my_portfolio_path(portfolio_item.id) %></p>
  <p><%= portfolio_item.subtitle %></p>
  <%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil?%>
  <%= link_to "Edit", edit_my_portfolio_path(portfolio_item.id) %>
  <%= link_to "Delete Portfolio Item", my_portfolio_path(portfolio_item), method: :delete, data: { confirm: "Are you sure?" } %>
<% end %>
